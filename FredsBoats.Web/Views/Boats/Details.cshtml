@model FredsBoats.Web.Models.Boat

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name</h1>

<div>
    <h4>Boat Specification</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Category</dt>
        <dd class = "col-sm-10">@Model.Category?.Name</dd>
        <dt class = "col-sm-2">Colour</dt>
        <dd class = "col-sm-10">@Model.BoatColour?.Name</dd>
        <dt class = "col-sm-2">Hourly Rate</dt>
        <dd class = "col-sm-10">$@Model.HourRate</dd>
        <dt class = "col-sm-2">Daily Rate</dt>
        <dd class = "col-sm-10">$@Model.DailyRate</dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

<hr />
<h3>User Comments</h3>
<p><em>No comments yet.</em></p>

@if (Model.Comments != null && Model.Comments.Any())
{
    <ul>
        @foreach (var comment in Model.Comments)
        {
            <li>    
                <strong>@comment.CreatedAt.ToString("g"):</strong> @comment.CommentText
            </li>
        }
    </ul>
}
else
{
    <p><em>No comments yet.</em></p>
    <p class="text-muted">Be the first to leave a comment!</p>
}

<div class="card p-3 bg-light">
    <h5>Add a Comment</h5>
    <form asp-action="AddComment" method="post">
        <div class="form-group">
            <label for="Author">Your Name</label>
            <input type="text" class="form-control" id="Author" name="Author" required />
        </div>
        <div class="form-group">
            <label for="Content">Your Comment</label>
            <textarea class="form-control" id="Content" name="Content" rows="3" required></textarea>
        </div>
        <input type="hidden" name="BoatId" value="@Model.BoatId" />
        <button type="submit" class="btn btn-primary mt-2">Submit Comment</button>
    </form>
</div>


